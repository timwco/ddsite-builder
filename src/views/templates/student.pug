h3.title
  | Update Student
div.form
  p.control
    input.input(type='text', ng-model="vm.student.name")
  p.control
    span.select
      select(name='class', ng-model='vm.student.class')
        option(value='') Choose Class
        option(value='JavaScript') JavaScript
        option(value='Java') Java
        option(value='iOS') iOS
  p.control
    input.input(type='text', ng-model="vm.student.github")
  p.control
    button.button.is-primary(ng-click="vm.updateStudent()") Update Student
    button.button.fl-right.is-danger(ng-click="vm.deleteStudent()") Delete Student

    